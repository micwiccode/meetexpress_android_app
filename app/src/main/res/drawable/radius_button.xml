<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#4563C5" />
            <gradient android:angle="-90" android:startColor="#4662BE" android:endColor="#3A54A7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#4563C5" />
            <solid android:color="#5576E3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#4563C5" />
            <gradient android:angle="-90" android:startColor="#5576E3" android:endColor="#4563C5" />
        </shape>
    </item>
</selector>